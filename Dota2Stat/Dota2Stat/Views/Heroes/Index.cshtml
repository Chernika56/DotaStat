@model IEnumerable<Dota2Stat.Models.DB.Hero>

@{
    ViewData["Title"] = "Index";
}

<h1>Heroes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Attribute
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HAttribute)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.HId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.HId">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
