@model Dota2Stat.Models.DB.Player

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Firstname
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlFirstName)
        </dd>
        <dt class="col-sm-2">
            Lastname
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlLastName)
        </dd>
        <dt class="col-sm-2">
            NickName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlNickname)
        </dd>
        <dt class="col-sm-2">
            MMR
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlMmr)
        </dd>
        <dt class="col-sm-2">
            Rang
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlRang)
        </dd>
        <dt class="col-sm-2">
            Country
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlCountryNavigation.CnName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PlId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
