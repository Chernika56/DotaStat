@model Dota2Stat.Models.PlayerTeam

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.TmId" />
            <div class="form-group">
                <label asp-for="Team.TmName" class="control-label">Name</label>
                <input asp-for="Team.TmName" class="form-control" />
                <span asp-validation-for="Team.TmName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.TmRating" class="control-label">Rating</label>
                <input asp-for="Team.TmRating" class="form-control" />
                <span asp-validation-for="Team.TmRating" class="text-danger"></span>
            </div>
            @for (var i = 1; i < 7; i++)
            {
                <div class="form-group">
                    <label asp-for="SelectedPlayerIds[i-1]" class="control-label">Player @i</label>
                    <select asp-for="SelectedPlayerIds[i-1]" class="form-control" asp-items="@(ViewBag.Players)">
                        <option value="">Select Player</option>
                    </select>
                    <span asp-validation-for="SelectedPlayerIds[i-1]" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
