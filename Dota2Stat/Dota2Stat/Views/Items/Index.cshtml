@model IEnumerable<Dota2Stat.Models.DB.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Items</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
