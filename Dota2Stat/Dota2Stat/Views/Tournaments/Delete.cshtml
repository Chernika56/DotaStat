@model Dota2Stat.Models.DB.Tournament

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Tournament</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrName)
        </dd>
        <dt class="col-sm-2">
            Tier
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrTier)
        </dd>
        <dt class="col-sm-2">
            Number of participants
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrParticipants)
        </dd>
        <dt class="col-sm-2">
            Prize
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrPrize)
        </dd>
        <dt class="col-sm-2">
            Place
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrPlace)
        </dd>
        <dt class="col-sm-2">
            Start date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrStartDate)
        </dd>
        <dt class="col-sm-2">
            End date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrEndDate)
        </dd>
        <dt class="col-sm-2">
            Organizer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrOrganizerNavigation.OpName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TrId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
